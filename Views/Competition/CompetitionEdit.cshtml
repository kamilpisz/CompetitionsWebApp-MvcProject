
@model AplikacjaASPNET.Views.ViewModels.CompetitionEditViewModel

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Competition" asp-action="competitionedit" enctype="multipart/form-data" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Organiser" class="control-label"></label>
                <input asp-for="Organiser" class="form-control" />
                <span asp-validation-for="Organiser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="@Html.GetEnumSelectList<AplikacjaASPNET.Models.Konkurs.EnumCategory>()" class="form-control">
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CompetitionList" class="btn btn-outline-info">Back to List</a>
</div>
